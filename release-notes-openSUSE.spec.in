Name:         @PACKAGE_NAME@
License:      xxx
Group:        xxx
Summary:      xxx
BuildArch:    noarch
BuildRoot:    %{_tmppath}/%{name}-%{version}-build
Provides:     kdebase-SuSE:/usr/share/doc/RELEASE_NOTES.en.html
# PreReq:       bash /bin/rm
Version:      @PACKAGE_VERSION@
Release:      0
Source0:      @PACKAGE_TARNAME@-%{version}.tar.bz2
